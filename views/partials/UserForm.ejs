<div class="max-w-md mx-auto py-4 px-8 bg-white shadow-lg rounded-lg my-20">
    <h1 class="text-3xl font-bold mb-6">Inscription</h1>
    <form action="<% if(!connexion){ %>/users/inscription<% }else{%>/users/connexion<% } %>" method="POST">
        <% if(!connexion){ %>
        <div class="mb-4">
            <label for="nom" class="text-gray-800 block mb-2">Nom</label>
            <input type="text" id="nom" name="nom" class="border border-gray-300 rounded-md p-2 w-full" required>
        </div>
        <div class="mb-4">
            <label for="prenom" class="text-gray-800 block mb-2">Prénom</label>
            <input type="text" id="prenom" name="prenom" class="border border-gray-300 rounded-md p-2 w-full" required>
        </div>
        <%} %>
        <div class="mb-4">
            <label for="email" class="text-gray-800 block mb-2">Email</label>
            <input type="email" id="email" name="email" class="border border-gray-300 rounded-md p-2 w-full" required>
        </div>
        <div class="mb-4">
            <label for="password" class="text-gray-800 block mb-2">Mot de passe</label>
            <input type="password" id="password" name="password" class="border border-gray-300 rounded-md p-2 w-full" required>
        </div>
        <% if(!connexion){ %>
        <div class="mb-4">
            <label for="cpassword" class="text-gray-800 block mb-2">Confirmer</label>
            <input type="password" id="cpassword" name="cpassword" class="border border-gray-300 rounded-md p-2 w-full">
        </div>
        <% } %>
        <div class="flex justify-around items-center">
            <button type="submit" class="bg-blue-500 w-1/2  hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded">
                <% if(!connexion){ %>
                    <span>S'inscrire</span>
                    <%} else {%>
                    <span>Connexion</span>
                <% } %>
            </button>
            <% if(connexion){ %>
                <a href="/users/inscription" class="text-lg">Créer un compte</a>
            <% } %>
        </div>
    </form>
</div>